@model ProductListResponse


<div class="card product-item border-0 mb-4">
    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
        <img class="img-fluid w-100" src="@Model.ImageUrl" alt="">
    </div>
    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
        <h6 class="text-truncate mb-3">@Model.ProductName</h6>
        <div class="d-flex justify-content-center">
            <h6>@((double)Model.UnitPrice * (1-Model.Discount)) ₺</h6><h6 class="text-muted ml-2"><del>@Model.UnitPrice ₺</del></h6>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between bg-light border">
        <a href="/Home/GetDetails/@Model.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Details</a>
         <a href="#" class="btn btn-sm text-dark p-0 sepet" data-id="@Model.ProductId" ><i class="fas fa-shopping-cart text-primary mr-1"></i>Add to Cart</a>
        @*<a href="#" class="btn btn-primary sepet" data-id="@Model.ProductId">Sepete ekle</a>*@
    </div>
</div>


