@model IEnumerable<ProductListResponse>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />
<table class="table table-bordered">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>*@

            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>*@

                <td>
                    <img src="@item.ImageUrl" class="img-thumbnail" alt="Alternate Text" />
                </td>
                
                <td>
                    <a href="/Products/UpdateProducts/@item.ProductId" class="btn btn-outline-primary">Update</a>
                </td>
                <td>
                    <a href="" class="btn btn-outline-danger">Delete</a>
                </td>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                @* </td>*@
            </tr>
             
        }
    </tbody>
   
</table>
<a href="/Products/AddProduct/" class="btn btn-outline-success">Add</a>
