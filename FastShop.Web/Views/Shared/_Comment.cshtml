@model ProductListResponse
<form action="/Home/PartialAddComment/" method="post">
    @*@Html.HiddenFor(x=>x.ProductId)*@
    <div class="form-group" hidden>
    <input asp-for="ProductId" value="@ViewBag.Id" />
</div>
    @*<div class="form-group">
